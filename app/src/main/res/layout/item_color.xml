<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameColorLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:background="@drawable/item_card_border_color"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemColor"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        tools:backgroundTint="@color/primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageReset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_color"
                android:padding="2dp"
                android:src="@drawable/ic_color_reset"
                app:tint="@color/onPrimary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
